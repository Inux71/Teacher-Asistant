<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeacherAsistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dracula_orchid</item>
        <item name="colorPrimaryVariant">@color/dracula_orchid</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/dracula_orchid</item>
    </style>
    <!-- EditText Theme -->
    <style name="EditTextTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorHint">@color/soothing_breeze</item>
        <item name="colorControlActivated">@color/city_lights</item>
        <item name="backgroundTint">@color/city_lights</item>
    </style>
</resources>